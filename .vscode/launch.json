    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Evaluate given scenario",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/evaluation_runner.py",
            "args": ["${workspaceFolder}/experiments/01c_jumping_input/"],
            "console": "integratedTerminal"
        },
        {
            "name": "Metrics of given scenario",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/visualization_runner.py",
            "args": ["${workspaceFolder}/experiments/01c_jumping_input/", "--novis"],
            "console": "integratedTerminal"
        }
    ]
}